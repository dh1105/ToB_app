SELECT resorts.resort_name , room_prices.2A as price FROM resorts inner join room_prices on room_prices.resort_id =resorts.id inner join resort_activities on resorts.id =resort_activities.resort_id inner join activities on resort_activities.id = activities.id WHERE activities.activity_name = $activity and room_prices.2A between $min_b and $max_b order by room_prices.2A

