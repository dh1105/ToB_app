<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="0dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/client_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_margin="0dp"
                android:hint="Enter client's email"
                android:inputType="textEmailAddress"
                android:paddingTop="20dp"
                android:textColor="@android:color/background_dark"
                android:textColorHint="@android:color/background_dark" />

            <EditText
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_margin="0dp"
                android:hint="Enter client's name"
                android:inputType="text|textPersonName"
                android:paddingTop="20dp"
                android:textColor="@android:color/background_dark"
                android:textColorHint="@android:color/background_dark" />

            <EditText
                android:id="@+id/btn_checkin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_margin="0dp"
                android:focusable="false"
                android:hint="Check in date"
                android:inputType="datetime"
                android:paddingTop="20dp"
                android:textColor="@android:color/background_dark"
                android:textColorHint="@android:color/background_dark" />

            <EditText
                android:id="@+id/btn_checkout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_margin="0dp"
                android:focusable="false"
                android:hint="Check out date"
                android:inputType="datetime"
                android:paddingTop="20dp"
                android:textColor="@android:color/background_dark"
                android:textColorHint="@android:color/background_dark" />

            <EditText
                android:id="@+id/days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_margin="0dp"
                android:hint="Total days"
                android:inputType="number"
                android:paddingTop="20dp"
                android:textColor="@android:color/background_dark"
                android:textColorHint="@android:color/background_dark" />

            <EditText
                android:id="@+id/adults"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_margin="0dp"
                android:hint="No: of adults"
                android:inputType="number"
                android:paddingTop="20dp"
                android:textColor="@android:color/background_dark"
                android:textColorHint="@android:color/background_dark" />

            <EditText
                android:id="@+id/kids"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_margin="0dp"
                android:hint="No: of kids, age"
                android:inputType="number"
                android:digits="0123456789, "
                android:paddingTop="20dp"
                android:textColor="@android:color/background_dark"
                android:textColorHint="@android:color/background_dark" />

            <EditText
                android:id="@+id/rooms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_margin="0dp"
                android:hint="No: of rooms"
                android:inputType="number"
                android:paddingTop="20dp"
                android:textColor="@android:color/background_dark"
                android:textColorHint="@android:color/background_dark" />

            <Button
                android:id="@+id/mail_button"
                style="@android:style/Widget.Holo.Light.Button.Inset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_toEndOf="@+id/name"
                android:layout_toRightOf="@+id/name"
                android:text="Next"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
